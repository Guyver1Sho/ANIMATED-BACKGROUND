{
    "particles": {
        "number": {
            "value": "100"
        },
        "color": {
            "value": "#fff"
        },
        "shape": {
            "type": "circle",
            "stroke": {
                "width": 1,
                "color": "#ccc"
            }
        },
        "opacity": {
            "value": 1,
            "random": true,
            "anim": {
                "enable": true,
                "speed": 10
            }
        },
        "size": {
            "value": 5,
            "random": false,
            "anim":{
                "enable": true,
                "speed":100

            }
        },
        "line_linked":{
            "enable": true,
            "distance": 120,
            "color":"fff",
            "width":4
        },
        "move":{
            "enable":true,
            "speed":10,
            "direction": "none",
            "straight": false

        }
    },
    "interactivity":{
        "events":{
            "onhover":{
                "enable":true,
                "mode":"repulse"

            },
            "onclick":{
                "enable": true,
                "mode": "push"
            }
        },
        "modes":{
            "repulse":{
                "distance":50,
                "duration":0.4

            },
            "bubble":{
                "distance":100,
                "size":10
            }
